    "ethers": "^6.13.2",
    "ipfs-http-client": "^60.0.1",
    "@pinata/sdk": "^2.1.0",
    "merkletreejs": "^0.5.2",
    "@zk-kit/incremental-merkle-tree.sol": "^1.7.0",
    "chai": "^4.4.1",
    "mocha": "^10.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
