{
  "info": {
    "name": "DAO Quadratic Voting - Avatar API",
    "description": "API endpoints for owner avatar management in DAO backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "jwt",
      "value": "",
      "type": "string"
    },
    {
      "key": "ownerId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('ownerId', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"StrongPass123!\",\n  \"name\": \"Alice Owner\",\n  \"role\": \"owner\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt', response.token);",
                  "    pm.collectionVariables.set('ownerId', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"owner@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Avatar Management",
      "item": [
        {
          "name": "Upload Avatar",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has avatarUrl', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('avatarUrl');",
                  "    pm.expect(response.success).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file",
                  "src": "/path/to/avatar.png"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/owners/{{ownerId}}/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners", "{{ownerId}}", "avatar"]
            }
          }
        },
        {
          "name": "Get Avatar",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains avatarUrl', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('avatarUrl');",
                  "    pm.expect(response.avatarUrl).to.be.a('string');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owners/{{ownerId}}/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners", "{{ownerId}}", "avatar"]
            }
          }
        },
        {
          "name": "Delete Avatar",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Avatar deleted successfully', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/owners/{{ownerId}}/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners", "{{ownerId}}", "avatar"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Scenarios",
      "item": [
        {
          "name": "Upload Without Auth",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file",
                  "src": "/path/to/avatar.png"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/owners/{{ownerId}}/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners", "{{ownerId}}", "avatar"]
            }
          }
        },
        {
          "name": "Upload Invalid File Type",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file",
                  "src": "/path/to/document.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/owners/{{ownerId}}/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners", "{{ownerId}}", "avatar"]
            }
          }
        },
        {
          "name": "Get Non-existent Avatar",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/owners/non-existent-id/avatar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "owners", "non-existent-id", "avatar"]
            }
          }
        }
      ]
    }
  ]
}
